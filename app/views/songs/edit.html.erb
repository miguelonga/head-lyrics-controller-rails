<%= form_for(@song) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :name, placeholder: "name of the song", class: "form-control" %>
  </div>
  <div class="field">
    <%= f.text_area :content, :rows => "20", placeholder: "Compose new song...", class: "form-control" %>
  </div>
  <%= f.submit "Update", class: "btn btn-primary" %>
<% end %>